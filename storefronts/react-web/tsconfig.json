{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["react", "react-dom"]
  }
}
